{
  "name": "sonypradana/php-mvc",
  "description": "Very light php mvc, include cli easyer to creat controller view and model quikly ",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Angger Pradana",
      "email": "sonypradana@gmail.com"
    }
  ],
  "require": {
    "php": "^7.4 || ^8.0",
    "sonypradana/php-library": "0.x-dev",
    "vlucas/phpdotenv": "^5.5",
    "react/event-loop": "^1.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.6",
    "friendsofphp/php-cs-fixer": "^3.18",
    "filp/whoops": "^2.15",
    "phpstan/phpstan": "^1.10"
  },
  "autoload": {
    "psr-4": {
        "App\\" : "app",
        "Database\\Seeders\\": "database/seeders/",
        "": [
            "app/library/",
            "app/services/"
        ]
    }
  },
"scripts": {
    "lint": "php-cs-fixer fix -v",
    "test:lint": "php-cs-fixer fix -v --dry-run",
    "test:types": "phpstan analyse --ansi --memory-limit=-1",
    "test:unit": "phpunit --testdox",
    "test": [
        "@test:lint",
        "@test:types",
        "@test:unit"
    ],
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ]
  },
  "extra": {
      "branch-alias": {
          "dev-master": "0.x-dev"
      }
  },
  "config": {
      "optimize-autoloader": true,
      "preferred-install": "dist",
      "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
