{
  "name": "sonyprdana/php-mvc",
  "description": "Very light php mvc, include cli easyer to creat controller view and model quikly ",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Angger Pradana",
      "email": "sonypradana@gmail.com"
    }
  ],
  "require": {
    "sonypradana/php-library": "^0.18",
    "vlucas/phpdotenv": "^5.2",
    "gumlet/php-image-resize": "^1.9"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "friendsofphp/php-cs-fixer": "^3.8",
    "filp/whoops": "^2.15"
  },
  "autoload": {
    "psr-4": {
        "Simpus\\Apps\\": "app/core/",
        "": [
            "app/commands/",
            "app/controllers/",
            "app/library/",
            "app/services/",
            "app/middleware/",
            "app/providers/",
            "app/larnels/",
            "app/karnels"
        ]
    }
  },
  "scripts": {
    "lint": "php-cs-fixer fix -v",
    "test:lint": "php-cs-fixer fix -v --dry-run",
    "test:unit": "phpunit",
    "test": [
        "@test:lint",
        "@test:unit"
    ]
}
}
